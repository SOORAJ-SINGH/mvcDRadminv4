@model IEnumerable<MVC5BoostrapDRAdminV4.TBL_EmployeeLogin>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Index</h2>

<script type="text/javascript" src="http://cdn.datatables.net/1.10.2/js/jquery.dataTables.min.js"></script>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@using (Html.BeginForm())
 {
     <p>
           Find by Name @Html.TextBox("searchString") 
         <button type="submit" class="btn btn-warning">
             <i class="glyphicon glyphicon-search"></i> Search
         </button>
     </p> 
 } 

<table id="myTable" class="table table-hover table-striped">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TBL_EmployeeDetails.EmpID)
        </th>
        <th>
            Name
            
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Type)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TBL_EmployeeDetails.EmpID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TBL_EmployeeDetails.FirstName)
                @Html.DisplayFor(modelItem => item.TBL_EmployeeDetails.LastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.LoginId }) |
                @Html.ActionLink("Details", "Details", new { id = item.LoginId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.LoginId })
            </td>
        </tr>
    }

</table>
